<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/first_name_card_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp">

            <EditText
                android:id="@+id/first_name_edit_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:hint="First Name"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#C7C7C7" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/last_name_card_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/first_name_card_v"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp">

            <EditText
                android:id="@+id/last_name_edit_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:hint="Last Name"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#C7C7C7" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/email_card_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp">

            <EditText
                android:id="@+id/email_edit_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#C7C7C7" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/password_card_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp">

            <EditText
                android:id="@+id/password_edit_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#C7C7C7" />

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/confirm_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textColor="@drawable/button_text_colors" />
    </LinearLayout>
</RelativeLayout>